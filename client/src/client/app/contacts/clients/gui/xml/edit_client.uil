<?xml version="1.0" encoding="utf-8"?>
<gui title="" icon="clients.png" status_bar="true">
	
	<components>
		
	    <label name="labelFirstName" x="0" y="0" border="true" margin_left="10" margin_top="10" text="Nombre:" />
		<input name="firstName" type="text" x="1" y="0" margin_left="-1" margin_top="10" margin_bottom="10" width="220" action="SAVE" length="50" tooltip="Nombre del cliente" />
	    
	    <label name="labelLastName" x="2" y="0" border="true" margin_left="10" margin_top="10"  text="Apellidos:" />
		<input name="lastName" type="text" x="3" y="0" margin_left="-1" margin_top="10" margin_bottom="10" width="150" action="SAVE" length="50" tooltip="Apellidos del cliente" />
		
		<label name="labelIdentification" x="4" y="0" border="true" margin_left="10" margin_top="10" text="Identificación:" />
		<input name="identification" type="text" x="5" y="0" margin_left="-1" margin_top="10" margin_bottom="10"  width="120" action="SAVE" length="20" tooltip="Identificación del cliente" />
		
		<!-- =========================================================================== -->
		
		<label name="labelAddress" x="0" y="1" border="true" margin_left="10" text="Dirección:" />
		<input name="address" type="text" x="1" y="1" margin_left="-1" margin_bottom="10" width="220" action="SAVE" length="100" tooltip="Dirección del cliente" />
		
		<label name="labelCity" x="2" y="1" border="true" margin_left="10" text="Ciudad:" />
		<input name="city" type="text" x="3" y="1" margin_left="-1" margin_bottom="10"  width="150" action="SAVE" length="50" tooltip="Ciudad del cliente" />
		
		<label name="labelPostalCode" x="4" y="1" border="true" margin_left="10" text="Código Postal:" />
		<input name="postalCode" type="integer" positive="true" x="5" y="1" margin_left="-1" margin_bottom="10" width="70" action="SAVE" length="5" tooltip="Código postal del cliente" />
		
		<!-- =========================================================================== -->
		
		<label name="labelTelephone" x="0" y="2" border="true" margin_left="10" text="Teléfono:" />
		<input name="telephone" type="integer" positive="true" x="1" y="2" margin_left="-1" margin_bottom="10" width="100" action="SAVE" length="9" tooltip="Teléfono del cliente" />
		
		<label name="labelMobile" x="2" y="2" border="true" margin_left="10" text="Móvil:" />
		<input name="mobile" type="integer" positive="true" x="3" y="2" margin_left="-1" margin_bottom="10" width="100" action="SAVE" length="9" tooltip="Móvil del cliente" />
		
		<label name="labelEmail" x="4" y="2" border="true" margin_left="10" text="Email:" />
		<input name="email" type="text" x="5" y="2" margin_left="-1" margin_right="10" margin_bottom="10" width="200" action="SAVE" length="100" tooltip="Email del cliente" />
		
		<!-- =========================================================================== -->
		
		<label name="labelComments" x="0" y="3" border="true"  margin_left="10" bottom_padding="33" text="Comentarios:" />
		<text_area name="comments" editable="true" x="1" y="3" margin_left="-1" margin_right="10" col_span="5" width="610" height="53" length="500" tooltip="Comentarios del cliente" />
		
		<!-- =========================================================================== -->
		
		<layout x="0" y="4" col_span="6">
			<button name="save"   x="0" y="0" text="Guardar"  icon="save.png"   action="SAVE"   width="130" tooltip="Guardar" />
			<button name="cancel" x="1" y="0" text="Cancelar" icon="cancel.png" action="CANCEL" width="130" tooltip="Cancelar" />
		</layout>
		
	</components>
	
	<literals>
		<literal name="NAME_REQUIRED" text="Debe indicar el nombre" />
		<literal name="PHONE_REQUIRED" text="Debe indicar el número de teléfono o móvil" />
		<literal name="CLIENT_NOT_CREATED" text="No se ha podido agregar el cliente" />
		<literal name="CLIENT_NOT_EDITED" text="No se ha podido editar el cliente" />
		<literal name="TITLE_ADD_CLIENT" text="Agregar cliente" />
		<literal name="TITLE_EDIT_CLIENT" text="Editar cliente" />
		<literal name="ASK_CLOSE_WINDOW" text="¿Desea cerrar la ventana?" />
	</literals>
	
</gui>